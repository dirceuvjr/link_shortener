.row
  .col-lg-8.col-lg-offset-2
    .panel.panel-default
      .panel-heading
        | Your links
      .panel-body
        .table-responsive
          table.table.table-striped
            thead
              tr
                th #
                th URL
                th Slug
                th Title
                th
                th
            tbody
              - @links.each do |link|
                tr
                  td = link.id
                  td
                    .input-group
                      = text_field_tag "url_#{link.id}", link.url, :readonly => true, :class => 'string form-control'
                      span.input-group-btn
                        = button_tag "<i class='fa fa-clipboard'></i>".html_safe, :data => { 'clipboard-target' => "#url_#{link.id}", :toggle => 'tooltip', :placement => 'bottom', :title => 'Coped!', :container => 'body'  }, :class => 'btn btn-default clipboard-btn'
                  td
                    .input-group
                      = text_field_tag "slug_#{link.id}", link.display_slug, :readonly => true, :class => 'string form-control'
                      span.input-group-btn
                        = button_tag "<i class='fa fa-clipboard'></i>".html_safe, :data => { 'clipboard-target' => "#slug_#{link.id}", :toggle => 'tooltip', :placement => 'bottom', :title => 'Coped!', :container => 'body' }, :class => 'btn btn-default clipboard-btn'
                  td = link.title
                  td = link_to "<i class='fa fa-line-chart fa-fw'></i>".html_safe, link_charts_path(link), :class => 'btn btn-default'
                  td = link_to "<i class='fa fa-remove fa-fw'></i>".html_safe, link, :data => { :confirm => 'Removing this link will be permanent.' }, :method => :delete, :class => 'btn btn-default'
      .panel-footer
        = link_to 'New Link', new_link_path
